export class RequestBuilder {
  constructor(private request: APIRequestContext) {}

  async get(url: string, options: RequestOptions = {}) {
    return this.request.get(url, {
      ...options,
      headers: { 'Content-Type': 'application/json', ...options.headers }
    });
