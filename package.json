{
  "name": "playwright-club66",
  "version": "1.0.0",
  "description": "Playwright E2E and API testing framework for Club66",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:smoke": "playwright test --grep @smoke",
    "test:api": "playwright test --project=api",
    "test:e2e": "playwright test tests/e2e",
    "test:visual": "playwright test --project=visual",
    "test:staging": "BASE_ENV=staging playwright test",
    "test:prod": "BASE_ENV=prod playwright test --grep @smoke",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile",
    "report": "playwright show-report",
    "report:open": "playwright show-report --host 0.0.0.0",
    "report:serve": "playwright show-report --port 9323",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "setup": "npm install && npx playwright install",
    "setup:ci": "npm ci && npx playwright install --with-deps",
    "clean": "rm -rf test-results playwright-report reports",
    "clean:all": "rm -rf node_modules test-results playwright-report reports"
  },
  "keywords": ["playwright", "e2e", "testing", "automation"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.1",
    "gmail-tester": "^1.3.8",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
